<% layout('layouts/template') -%>
<h1>New Card!</h1>

<form action="/decks/<%= deckId %>/cards" method="POST" enctype="multipart/form-data">
    <div id="card-form-entry">

    </div>
    
    <button class="btn btn-info" id="another-card"><i class="fas fa-plus"></i> Add another</button>

    <input class="btn btn-primary" type="submit">
    <input class="btn btn-danger" type="button" onclick="history.back()" value="Cancel">
</form>

<script src="/javascripts/cards/new.js"></script>