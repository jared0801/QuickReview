<div class="card card-item">
    <div class="card-content">
        <% if(list) { %>
            <h3>Card <%= i+1 %></h3>
        <% } %>
        <label class="card-label">Question</label>
        <div><%= card.question %></div>
        <br>
        <label class="card-label">Answer</label>
        <div><%= card.answer %></div>
        <% if(card.image && card.image.url) { %>
            <div>
                <img src="<%= card.image.url %>" width="200px"/>
            </div>
        <% } %>
    </div>
    <% if(currentUser && deck.author.equals(currentUser._id)) { %>
        <br>
        <%- include('../../form-modal', { action: `/decks/${deck.id}/cards/${card.id}?_method=DELETE`, target: 'delCardWarning', title: 'Warning', text: 'This card will be deleted forever. Are you sure?', btnText: 'Delete', btnClass: 'btn-danger' }) %>
        <div class="card-controls">
            <div class="btn btn-delete">
                <button class="btn btn-danger" role="button" data-toggle="modal" data-target="#delCardWarning"><i class="fas fa-trash"></i><span class="d-none d-md-inline"> Delete</span></button>
            </div>
            <a class="btn btn-primary" href="/decks/<%= deck.id %>/cards/<%= card.id %>/edit"><i class="fas fa-edit"></i><span class="d-none d-md-inline"> Edit</span></a>
        </div>
    <% } %>
</div>