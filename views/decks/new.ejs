<% layout('layouts/template') -%>
<h1><%= title %></h1>

<form action="/decks" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title-input">Title</label>
        <input class="form-control" type="text" name="deck[title]" placeholder="Title" id="title-input" required>
    </div>
    <div class="form-group">
        <label for="description-input">Description</label>
        <textarea class="form-control" name="deck[description]" placeholder="Description" rows="5" id="description-input" required></textarea>
    </div>
    <div class="form-group">
        <label for="title-subjects">Subject Tags</label>
        <input class="form-control" type="text" name="deck[subjects]" placeholder="Subjects" id="subject-input" pattern="^[0-9a-zA-z ]+(,([0-9a-zA-z ])+)*">
        <small class="form-text text-muted">Optional</small>
        <small class="form-text text-muted">Separate each subject with a comma.</small>
        <small class="form-text text-muted">Alphanumeric characters only. Subjects are not case sensitive.</small>
    </div>

    <div class="form-group">
        <label for="image-input">Image</label>
        <input class="form-control-file" type="file" accept="images/*" name="image" id="image-input">
        <small class="form-text text-muted">Optional</small>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="accessRadio" id="publicRadio" value="public" checked>
        <label class="form-check-label" for="publicRadio">
            Public
        </label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="accessRadio" id="privateRadio" value="private">
        <label class="form-check-label" for="privateRadio">
            Private
        </label>
    </div>
    <br>
    <small class="text-danger">If the deck is private, you will be the only one who can view, review, and test with it.</small>
    
    <br>
    <input class="mt-3 btn btn-primary" type="submit">
</form>
